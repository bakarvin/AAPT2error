<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_pengaturan_profile">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bekgron"
        android:id="@+id/appBar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Toolbardaftar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageBack"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_left"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/titleLayout"
                    fontPath="fonts/Poppins-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="44dp"
                    android:layout_toRightOf="@id/imageBack"
                    android:text="Pengaturan"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    tools:ignore="MissingPrefix" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_below="@id/appBar"
        android:orientation="horizontal"
        android:id="@+id/ubahDataLayout">

        <LinearLayout
            android:layout_height="88dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:id="@+id/txt_container_linear_layout"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:text="Pengaturan Akun"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:layout_marginTop="4dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/darker_gray"
                android:text="Data diri dan Keamanan Akun"/>
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginTop="18dp"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:background="@color/grey"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ubahDataLayout"
        android:layout_marginLeft="20dp"
        android:id="@+id/exitLayout">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgExit"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_exit_to_app_black_24dp"/>

        <LinearLayout
            android:layout_height="88dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/imgExit">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:text="Log out"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/exitLayout"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1600dp"
        android:background="@color/grey"/>

</RelativeLayout>